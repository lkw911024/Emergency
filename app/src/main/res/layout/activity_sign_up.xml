<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation = "vertical"
    android:layout_width = "match_parent"
    android:layout_height= "match_parent"
    android:onClick="layoutOnClick"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/mainColor">

        <ImageButton
            android:id="@+id/signUp_imageButton_backBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:background="@drawable/arrows"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="등록"
            android:textStyle="bold"
            android:textSize="23dp"
            android:textColor="@color/whiteColor">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:text="아이디 등록"
            android:textStyle="bold"
            android:textSize="28dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/signUp_idInput_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signUp_EditText_id"
            android:layout_margin="8dp"
            android:hint="아이디"
            android:textColorHint="@color/mainColor"
            android:textCursorDrawable="@color/mainColor"/>
        <EditText
            android:id="@+id/signUp_pwdInput_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signUp__EditText_password"
            android:layout_margin="8dp"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:textColorHint="@color/mainColor"
            android:textCursorDrawable="@color/mainColor"
            />
        <EditText
            android:id="@+id/signUp_pwdConfirmInput_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signUp_EditText_passwordCheck"
            android:layout_margin="8dp"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            android:textColorHint="@color/mainColor"
            android:textCursorDrawable="@color/mainColor"/>
        <EditText
            android:id="@+id/signUp_emailInput_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signUp_EditText_email"
            android:layout_margin="8dp"
            android:hint="Email 주소"
            android:textColorHint="@color/mainColor"
            android:inputType="textEmailAddress"
            android:textCursorDrawable="@color/mainColor"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/signUp_signupBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:id="@+id/signUp_Button_sendBtn"
            android:text="등록"
            android:textStyle="bold"
            android:textColor="@color/whiteColor"
            android:background="@color/mainColor"
            android:onClick="onClickSignUpBtn"/>
    </LinearLayout>
</LinearLayout>